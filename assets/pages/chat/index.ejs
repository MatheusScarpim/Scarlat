    <section class="chat__section">
        <div class="brand">
            <img height="30" src="/icon.ico" alt="">
            <h1>Scarlat</h1>
        </div>
        <div class="message__area">
            <% for (let i = 0; i < protocolo.length; i++) { %>
            <% if (protocolo[i].USUARIO == "U") { %>
            <div class="incoming message">
                <h4>USUARIO</h4>
                <p><%= protocolo[i].MENSAGEM %></p>
            </div>
            <% } else { %>
            <div class="outgoing message">
                <h4>Scarlat</h4>
                <p><%= protocolo[i].MENSAGEM %></p>
            </div>
            <% } %>
            <%} %>
        </div>
        <div>
            <div class="border">
                <textarea id="textarea" cols="30" rows="1" placeholder="Digite a mensagem..."></textarea>
            </div>

            <div class="input-group col-15 py-3 px-3">
                <input type="text" id="numero" placeholder="NÃºmero de telefone" class="form-control">
                <div class="col-5">
                    <input type="text" id="mensagem" placeholder="Mensagem" class="form-control">
                </div>
                <div class="button col-3">
                    <button type="button" onclick="sendNumber()" class="btn btn-secondary">Enviar</button>
                </div>
            </div>


        </div>
    </section>
    <script src="/socket.io/socket.io.js"></script>

            <a href="/chat/<%=protocolos[i].PROTOCOLO_ID%>/<%=protocolos[i].NUMERO%>/<%=protocolos[i].NOME%>"
                class="list-group-item list-group-item-action list-group-item-light rounded-0 border border-dark =">
                <div class="media"><img src="data:image/png;charset=utf-8;base64,<%=protocolos[i].FOTOPERFIL%>"
                        alt="user" width="50" class="rounded-circle">
                    <div class="media-body ml-4">
                        <div class="d-flex align-items-center justify-content-between mb-1">
                            <h6 class="mb-0"><%=protocolos[i].NOME%></h6>
                            <small class="small font-weight-bold"><%=protocolos[i].ULTIMO_CONTATO%></small>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-1">
                            <p class="font-italic mb-0 text-small"><%=protocolos[i].ULTIMA_MENSAGEM%></p>
                            <div class="circle">
                                <span class="number"><%=protocolos[i].NAO_LIDAS%></span>
                            </div>

                        </div>
                    </div>
                </div>
            </a>
            <%} %>
